module InductionFromScratch where

------------------------------------------------------------------------
-- Оператор	Приоритет
--    + 	      6
--    *         7
--    ≡         4
------------------------------------------------------------------------

infixl 6 _+_
infix  4 _≡_

------------------------------------------------------------------------
-- 1. Натуральные числа
------------------------------------------------------------------------

data ℕ : Set where
  zero : ℕ
  suc  : ℕ → ℕ

------------------------------------------------------------------------
-- 2. Сложение
------------------------------------------------------------------------

_+_ : ℕ → ℕ → ℕ
zero  + m = m
suc n + m = suc (n + m)

------------------------------------------------------------------------
-- 3. Равенство
------------------------------------------------------------------------

data _≡_ {A : Set} (x : A) : A → Set where
  refl : x ≡ x

------------------------------------------------------------------------
-- 4. cong
------------------------------------------------------------------------

cong : {A B : Set} {x y : A} →
       (f : A → B) →
       x ≡ y →
       f x ≡ f y
cong f refl = refl

------------------------------------------------------------------------
-- 5. Доказательство
------------------------------------------------------------------------

plus-zero-right : (n : ℕ) → n + zero ≡ n
plus-zero-right zero    = refl
plus-zero-right (suc n) = cong suc (plus-zero-right n)
